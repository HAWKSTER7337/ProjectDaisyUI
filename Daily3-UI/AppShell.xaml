<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Daily3_UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Daily3_UI.Pages"
    FlyoutBehavior="Disabled">

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor"
                        Value="{DynamicResource Primary}" />
                <Setter Property="Shell.TabBarTitleColor"
                        Value="{DynamicResource Secondary}" />
                <Setter Property="Shell.TabBarUnselectedColor"
                        Value="{DynamicResource Black}" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Title="Daily Numbers"
            ContentTemplate="{DataTemplate local:WinningNumbersPage}"
            Route="WinningNumbersPage" />

        <ShellContent
            Title="Buy Tickets"
            ContentTemplate="{DataTemplate local:BuyTickets}"
            Route="BuyTickets" />
        <ShellContent
            Title="View History"
            ContentTemplate="{DataTemplate local:TicketHistory}"
            Route="TicketHistory" />
    </TabBar>

</Shell>