<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{StaticResource Secondary}"
             x:Class="Daily3_UI.Pages.LogInPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
           <StackLayout Spacing="10">

                  <!--Title Image-->
                  <Image Source="daily.png" />

                  <!--Title-->
                  <Label Text="Login"
                         TextColor="{StaticResource neutral4}"
                         Style="{StaticResource Day}"
                         FontSize="40" />

                  <!--User Name-->
                  <Label Text="UserName"
                         TextColor="{StaticResource neutral4}"
                         Style="{StaticResource Day}"
                         HorizontalOptions="Start" />

                  <Border
                         Style="{StaticResource Picker-Border}">
                         <Entry Placeholder="username"
                                HorizontalTextAlignment="Center"
                                HorizontalOptions="Fill"
                                x:Name="Username"
                                Style="{StaticResource Entry-Design}" />
                  </Border>

                  <!--Password Name-->
                  <Label Text="Password"
                         TextColor="{StaticResource neutral4}"
                         Style="{StaticResource Day}"

                         HorizontalOptions="Start" />
                  <Border
                         Style="{StaticResource Picker-Border}">
                         <Entry Placeholder="password"
                                HorizontalTextAlignment="Center"
                                HorizontalOptions="Fill"
                                x:Name="Password"
                                Style="{StaticResource Entry-Design}"
                                IsPassword="True" />
                  </Border>
                  
                  <!--Login Button-->
                  <Button Text="Log In"
                          Padding="10"
                          Margin="10"
                          Clicked="AttemptLogIn" />

                  <!--Sign up Button-->
                  <Button Text="Create Account"
                          Padding="10"
                          Margin="10"
                          Clicked="TakeToCreateAccountPage" />

                  <!--Error Line-->
                  <Label Text=""
                         Style="{StaticResource Error-Message}"
                         x:Name="ErrorLabel" />

           </StackLayout>
    </ContentPage.Content>
</ContentPage>